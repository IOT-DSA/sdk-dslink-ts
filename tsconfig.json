{
  "compilerOptions": {
    "target": "es2017",
    "module": "none",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "ts/**/*",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}